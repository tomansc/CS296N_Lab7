<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">CS296 Lab 7<small>&nbsp;Authorization (roles and such)</small></a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="~/Home/Index">Home</a></li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Extras
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/Home/About">About the author</a></li>
                        <li><a href="~/Home/Contact">Contact the author</a></li>
                        <li><a href="~/Home/History">Bellingham's history</a></li>
                    </ul>
                </li>
                <li><a href="~/Map/Map">Map</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        News
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/News/Recent">Recent news</a></li>
                        <li><a href="~/News/Archive">Archived news</a></li>
                    </ul>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Forum
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/ForumView">ForumView</a></li>
                    </ul>
                </li>
   
           
                <li>
                    @if (User.IsInRole("Admin") || (User.IsInRole("MegaAdmin")))
                    {
                        <a href="@Url.Action("ManageUserRoles", "Auth")"><span class="glyphicon glyphicon-edit"></span>&nbsp;&nbsp;Manage roles</a>
                    }
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Logout", "Auth")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log Out</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Auth")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log In</a>
                    }
                </li>
                <li><a href="@Url.Action("Register", "Auth")"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Register </a>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h3>@ViewBag.Message</h3>
        @RenderBody()
        <hr />
        <footer>
            <p>
                <small>
                    Lorem ipsum si dolor amet.
                </small>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
